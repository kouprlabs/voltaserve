{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "singleQuote": true,
  "semi": false,
  "quoteProps": "preserve",
  "importOrder": [
    "^react$",
    "^@react-dom/(.*)$",
    "^react-router-dom$",
    "^react-redux$",
    "^@chakra-ui/(.*)$",
    "^@koupr/ui$",
    "^swr$",
    "^formik$",
    "^yup$",
    "<THIRD_PARTY_MODULES>",
    "^@/api/(.*)$",
    "^@/store/(.*)$",
    "^@/components/(.*)$",
    "^@/infra/(.*)$",
    "^@/theme/(.*)$",
    "^@/helpers/(.*)$",
    "^[./]",
    "^(.*)\\.css$"
  ],
  "importOrderSeparation": false
}
