{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "printWidth": 120,
  "singleQuote": true,
  "semi": false,
  "quoteProps": "preserve",
  "importOrder": [
    "^react$",
    "^react-dom/(.*)$",
    "^react-router-dom$",
    "^react-redux$",
    "^@chakra-ui/(.*)$",
    "^@koupr/ui$",
    "^swr$",
    "^formik$",
    "^yup$",
    "<THIRD_PARTY_MODULES>",
    "^@/(.*)$",
    "^[./](.*)$"
  ],
  "importOrderSeparation": false
}
